<%= render "layouts/header" %>
<br>
<br>
<%= link_to "new watch", new_watch_path, class: "watch-btn" %>
<br>
<br>
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>watches</title>
</head>
<body>
<br>
<br>
<section class="container">
	<% for x in @watches %>
	<div class="row">
	<!-- watch box -->
	<div style="border: 1px solid black;" class="box col-lg-2 col-md-2 col-sm-2 col-2">
	<%= link_to	watch_path(x.id) do %>
		
			<br>
			
			<div class="d-flex justify-content-center">
				<%= cl_image_tag x.photo1.key, height: 375, width: 280, crop: :fill %>
			</div>
	<% end %>
			<p class="center-txt txt" style="text-decoration: none;">
				<%= x.name %> - <%= x.price %>				
			</p>
			</p>
		</div>
	
	</div>
	<!-- watch box end -->
	<% end %>
	
</section>
</body>
</html>


<style type="text/css">
	.box{
		width: 320px;
		height: 450px;
	}
	.box:hover {
		opacity: 0.5;
		cursor: pointer;
	}
	.watch-btn{
		padding: 15px;
		border:  1px solid black;
		margin: 5px;
		font-style: none;
		color: black;
		text-decoration: none;
		border-radius: 3px;
	}
	.watch-btn:hover{
		opacity:  0.5;
	}

	.title-txt{
        font-size:20px;
        text-decoration:none;
        padding: 10px;
        color:  black;
        border:  1px solid black;
	}

	.txt{
		margin-top: 7px;
		font-size: 19px;
		color: black;
		text-decoration: none;
	}
</style>

