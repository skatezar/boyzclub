<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
	<!-- desktop view -->
	<br>

	<section class="desktop-div" id="header-tag">
		
		<div class="d-flex-around" >
			<span class="mt-1">
				<%= link_to "PRICETALK", pricetalk_index_path, class: 'header-btn' %>
			</span>
			<span>
				<h1>
					<%= link_to "PRIVATE WATCHES", watch_index_path, class: 'no-deco round-bdr', style:'color:black;' %>	
				</h1>
			</span>
			
			<span class="mt-1">
				<%= link_to "ABOUT", about_path, class: 'header-btn' %>
			</span>
		</div>
		<hr>
	</section>

	<!-- end desktop view -->
	
	<!-- mobile view -->
	<section class="mobile-div">
		<span>
			<h1 class="center-txt">
				<%= link_to "PRIVATE WATCHES", watch_index_path, class: 'no-deco round-bdr', style:'color:black;' %>	
			</h1>
		</span>

		<span class="mt-1 d-flex justify-content-center">
					<%= link_to "ABOUT", about_path, class: 'header-btn' %>
		</span>
		<span class="mt-1 d-flex justify-content-center">
				<%= link_to "PRICETALK", pricetalk_index_path, class: 'header-btn' %>
		</span>
			<hr>
	</section>

	<!-- end mobile view -->

</body>
</html>

<style type="text/css">
	.header-btn{
		text-decoration: none;
		color: black;
		font-size: 20px;
	}

	.header-btn:hover{
		color: pink;
	}


@media only screen and (min-width: 1000px) {
  .mobile-div{
    display:none;
  }
   .check_boxes{
    font-size:13px;
    width:50px;
  }

}

@media (min-width: 1000px){
  .mobile-div{
    display:none;
  }
   .check_boxes{
    font-size:13px;
    width:50px;
  }

}
@media (max-width: 1000px){
  .desktop-div{
    display: none;
    margin: none;
  }
  .mobile-div{
    display: "";
  }
  .check_boxes{
    font-size:18px;
    width:50px;
  }
}

</style>
