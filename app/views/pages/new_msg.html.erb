<% if current_user.admin == true %>

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>enquiries</title>
</head>
<body>

	<h4 class="center-txt">
		ALL MESSAGES
	</h4>

	<br>
	<div class="d-flex justify-content-around">
		<%= link_to  "ALL EMAILS", all_emails_path, class: "cool-btn" %>
		<%= link_to  "NEW MESSAGES", new_msg_path, class: "cool-btn" %>
		<%= link_to  "OLD MESSAGES", old_msg_path, class: "cool-btn" %>	
	</div>
	
	<br>
	<br>
	<br>	
<% @messages.each do |message| %>
	<% if message.read == false %>
	<section style="background-color:white; border: 1px solid black;" class="m-3 p-3">
		<p class="center-txt">
				<%= message.email %>;	
		</p>
		<p class="center-txt">
				<%= message.phone %>;	
		</p>
		<p class="center-txt">
				<%= message.message %> 
		</p>
	<div class="d-flex">
		<%= link_to 'READ', msg_read_path(:msg_id => message.id), class: 'cool-btn green' %>		
	</div>

	</section>
	

	<% end %>
<% end %>
</body>
</html>


<% end %>
